extends layout

block content
  .container.mt-4
    .row.mb-4
      .col-12
        h2 Search Results
        p.lead Showing results for: <strong>#{query}</strong>

        if resultsCount > 0
          p.text-muted Found #{resultsCount} results

          .timeline
            each entry in results
              .card.mb-4.shadow-sm
                .card-body
                  .row
                    .col-md-2.text-center
                      .badge.bg-primary.fs-6= entry.date
                    .col-md-10
                      h4.card-title= entry.title
                      p.card-text= entry.excerpt
                      
                      if entry.tags && entry.tags.length
                        .mb-3
                          each tag in entry.tags
                            span.badge.bg-secondary.me-1= tag
                      
                      a.btn.btn-outline-primary.btn-sm(href=`/entry/${entry.id}`) Read More
        else
          .text-center.py-5
            i.fas.fa-search.fa-3x.text-muted.mb-3
            p.text-muted.fs-5= noResultsMessage || "No results found for your search."
            
        .mt-4
          a.btn.btn-secondary(href="/") Back to Homepage