extends layout

block content
  .container
    .row.justify-content-center
      .col-md-8.col-lg-6
        .card.shadow
          .card-body
            h2.card-title.text-center.mb-4 User Profile
            
            .row
              .col-md-4.text-center.mb-3
                if user.avatar
                  img.rounded-circle.mb-3(
                    src=user.avatar 
                    alt="Profile Picture" 
                    width="100" 
                    height="100"
                    style="object-fit: cover;"
                  )
                else
                  .bg-secondary.rounded-circle.d-inline-flex.align-items-center.justify-content-center.mb-3(
                    style="width: 100px; height: 100px;"
                  )
                    i.fas.fa-user.fa-2x.text-white
              
              .col-md-8
                table.table.table-borderless
                  tbody
                    tr
                      th(scope="row") Username:
                      td= user.username
                    tr
                      th(scope="row") Email:
                      td= user.email
                    tr
                      th(scope="row") Provider:
                      td
                        span.badge.bg-info= user.provider
                    if user.role
                      tr
                        th(scope="row") Role:
                        td
                          span.badge.bg-success= user.role

            .text-center.mt-4
              a.btn.btn-outline-secondary.me-2(href="/") Back to Home
              a.btn.btn-danger(href="/auth/logout") Logout