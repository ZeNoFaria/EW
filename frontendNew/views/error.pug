extends layout

block content
  .mockup
    .mockup-header
      h3= siteName
      div
        if user
          button.btn= user.name
        else
          button.btn Login

    .nav
      ul
        each item in navItems || []
          li
            a(href=item.url, class=item.active ? "active" : "")= item.text

    .mockup-body
      .error-container
        h2 Error
        h3= error.status
        p= message
        
        .error-actions
          a(href="/").btn Back to Homepage